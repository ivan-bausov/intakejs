{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "build",
    "noImplicitAny": true
  },
  "filesGlob": [
    "lib/**/*.ts",
    "test/**/*.ts",
    "!node_modules/**/*.ts"
  ]
}
